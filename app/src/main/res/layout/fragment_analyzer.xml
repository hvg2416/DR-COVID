<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AnalyzerFragment"
    android:background="@android:color/white">
    <!-- Outer Relative Layout Consisting all Questions -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/analyzer_fragment_header_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/analyzer_fragment_header_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/covid_19_self_checker_header_text"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/analyzer_fragment_terms_of_use_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/analyzer_fragment_header_relative_layout"
            android:padding="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/analyzer_fragment_terms_of_use_header_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/terms_of_use_header_text"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/analyzer_fragment_terms_of_use_description_text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/analyzer_fragment_terms_of_use_header_text_view"
                android:text="@string/terms_of_use_sub_header_text"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textColor="@color/death_cases_sub_title_text_color"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/analyzer_fragment_terms_of_use_description_text_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@id/analyzer_fragment_terms_of_use_description_text_view_1"
                android:text="@string/terms_of_use_description_text"
                android:textSize="18sp"
                android:lineSpacingExtra="1sp"
                android:textColor="@android:color/black"
                android:fontFamily="casual"
                android:textStyle="bold"/>
        </RelativeLayout>
        <!-- Inner Relative Layout consisting single question -->

        <!-- QUESTION NO. 1 -->
        <RelativeLayout
            android:id="@+id/question_1_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/analyzer_fragment_terms_of_use_relative_layout"
            android:padding="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/question_1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Question_1"/>
            <CheckBox
                android:id="@+id/question_1_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_text_view"
                android:textColor="@android:color/black"
                android:text="@string/Question_1_Option_1"
                android:textSize="16sp"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_1_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_option_1"
                android:text="@string/Question_1_Option_2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_1_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_option_2"
                android:text="@string/Question_1_Option_3"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_1_option_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_option_3"
                android:text="@string/Question_1_Option_4"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_1_option_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_option_4"
                android:text="@string/Question_1_Option_5"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_1_option_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_option_5"
                android:text="@string/Question_1_Option_6"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_1_option_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_1_option_6"
                android:text="@string/Question_1_Option_7"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
        </RelativeLayout>
        <!-- QUESTION NO. 2 -->
        <RelativeLayout
            android:id="@+id/question_2_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_1_relative_layout"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/question_2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Question_2"/>
            <CheckBox
                android:id="@+id/question_2_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_2_text_view"
                android:textColor="@android:color/black"
                android:text="@string/Question_2_Option_1"
                android:textSize="16sp"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_2_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_2_option_1"
                android:text="@string/Question_2_Option_2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color" />
        </RelativeLayout>
        <!-- QUESTION NO. 3 -->
        <RelativeLayout
            android:id="@+id/question_3_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_2_relative_layout"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/question_3_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Question_3"/>
            <CheckBox
                android:id="@+id/question_3_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_3_text_view"
                android:textColor="@android:color/black"
                android:text="@string/Question_3_Option_1"
                android:textSize="16sp"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_3_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_3_option_1"
                android:text="@string/Question_3_Option_2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
        </RelativeLayout>
        <!-- QUESTION NO. 4 -->
        <RelativeLayout
            android:id="@+id/question_4_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_3_relative_layout"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/question_4_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Question_4"/>
            <CheckBox
                android:id="@+id/question_4_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_4_text_view"
                android:textColor="@android:color/black"
                android:text="@string/Question_4_Option_1"
                android:textSize="16sp"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_4_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_4_option_1"
                android:text="@string/Question_4_Option_2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
        </RelativeLayout>
        <!-- QUESTION NO. 5 -->
        <RelativeLayout
            android:id="@+id/question_5_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_4_relative_layout"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/question_5_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Question_5"/>
            <CheckBox
                android:id="@+id/question_5_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_5_text_view"
                android:textColor="@android:color/black"
                android:text="@string/Question_5_Option_1"
                android:textSize="16sp"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_5_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_5_option_1"
                android:text="@string/Question_5_Option_2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
        </RelativeLayout>
        <!-- QUESTION NO. 6 -->
        <RelativeLayout
            android:id="@+id/question_6_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_5_relative_layout"
            android:layout_marginTop="16dp"
            android:padding="24dp"
            android:background="@drawable/tracker_frag_latest_update_background">
            <TextView
                android:id="@+id/question_6_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Question_6"/>
            <CheckBox
                android:id="@+id/question_6_option_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_text_view"
                android:textColor="@android:color/black"
                android:text="@string/Question_6_Option_1"
                android:textSize="16sp"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_1"
                android:text="@string/Question_6_Option_2"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_2"
                android:text="@string/Question_6_Option_3"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_3"
                android:text="@string/Question_6_Option_4"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_4"
                android:text="@string/Question_6_Option_5"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_5"
                android:text="@string/Question_6_Option_6"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_6"
                android:text="@string/Question_6_Option_7"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
            <CheckBox
                android:id="@+id/question_6_option_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question_6_option_7"
                android:text="@string/Question_6_Option_8"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:buttonTint="@color/check_box_color"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_6_relative_layout"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:background="@drawable/submit_button_background"
            android:gravity="center"/>
    </RelativeLayout>
</ScrollView>